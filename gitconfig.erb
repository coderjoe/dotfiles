[user]
	name = <%= print("Your Name: "); STDOUT.flush; STDIN.gets.chomp %>
	email = <%= print("Your Email: "); STDOUT.flush; STDIN.gets.chomp %>
[github]
	user = <%= print("GitHub Username: "); STDOUT.flush; STDIN.gets.chomp %>
	token = <%= print("GitHub API Token: "); STDOUT.flush; STDIN.gets.chomp %>
[color]
	diff = auto
	status = auto
	branch = auto
[alias]
  co = checkout
  graph = log --graph --abbrev-commit --decorate --date=relative --format=format:'%C(bold blue)%h%C(reset)\t%C(bold green)%d%C(reset) %C(white)%s%C(reset) - %C(bold white)%an%C(reset) %C(bold yellow)(%ar)%C(reset)' --all
  hist = log --pretty=format:\"%C(bold blue)%h%C(reset) %C(bold yellow)%ad%C(reset) | %s%C(bold green)%d%C(reset) %C(bold white)[%an]%C(reset)\" --graph --date=short
  l = log --decorate=short
  serve = !git daemon --reuseaddr --verbose --base-path=. --export-all ./.git
  gr = !git graph
  hi = !git hist

[core]
	excludesfile = <%= ENV['HOME'] %>/.gitignore
  autocrlf = input
  safecrlf = true
[apply]
	whitespace = nowarn
